<header class="navbar navbar-expand-lg bg-white shadow-sm">
  <div class="container">
    <%= link_to (current_user ? notes_home_path : root_path), class: "navbar-brand fw-bold text-danger" do %>
      <i class="bi bi-journal-text me-2"></i>Rails Note
    <% end %>
    <div class="d-flex align-items-center">
      <% if current_user %>
        <div class="d-flex align-items-center">
          <span class="text-secondary me-3">
            <i class="bi bi-person-circle me-2"></i><%= current_user.name %>
          </span>
          <%= button_to logout_path,
              method: :delete,
              class: "btn btn-outline-danger" do %>
            <i class="bi bi-box-arrow-right me-2"></i>ログアウト
          <% end %>
        </div>
      <% else %>
        <div class="d-flex gap-2">
          <%= link_to login_path, class: "btn btn-outline-primary" do %>
            <i class="bi bi-box-arrow-in-right me-2"></i>ログイン
          <% end %>
          <%= link_to signup_path, class: "btn btn-success" do %>
            <i class="bi bi-person-plus me-2"></i>サインアップ
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</header>
