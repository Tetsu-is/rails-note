<header class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center text-danger" do %>
      <i class="bi bi-journal-text me-2"></i>Rails Note
    <% end %>
    <% if logged_in? %>
      <div class="navbar-nav me-auto">
        <%= link_to notes_home_path, class: "nav-link d-flex align-items-center" do %>
          <i class="bi bi-journals me-2"></i>ノート一覧
        <% end %>
      </div>
      <div class="d-flex align-items-center">
        <span class="text-secondary me-3">
          <i class="bi bi-person-circle me-2"></i><%= current_user.username %>
        </span>
        <%= button_to logout_path,
            method: :delete,
            class: "btn btn-outline-danger",
            form: { class: "d-inline-block" } do %>
          <i class="bi bi-box-arrow-right me-2"></i>ログアウト
        <% end %>
      </div>
    <% else %>
      <div class="d-flex gap-2">
        <%= link_to login_path, class: "btn btn-outline-danger" do %>
          <i class="bi bi-box-arrow-in-right me-2"></i>ログイン
        <% end %>
        <%= link_to signup_path, class: "btn btn-danger" do %>
          <i class="bi bi-person-plus me-2"></i>新規登録
        <% end %>
      </div>
    <% end %>
  </div>
</header>
