<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4 text-danger">ノート一覧</h1>
    <%= link_to new_note_path, class: 'btn btn-danger fw-bold px-4 py-2 rounded-3' do %>
      <i class="bi bi-plus-circle me-2"></i>新規作成
    <% end %>
  </div>

  <% if @notes.present? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @notes.each do |note| %>
        <div class="col">
          <%= link_to note_path(note), class: 'text-decoration-none' do %>
            <div class="card h-100 note-card border-0 shadow-sm">
              <div class="card-body">
                <h5 class="card-title text-danger fw-bold"><%= note.title %></h5>
                <p class="card-text text-muted"><%= truncate(note.body, length: 100) %></p>
              </div>
              <div class="card-footer bg-white border-0">
                <small class="text-muted">
                  <i class="bi bi-clock me-1"></i>
                  <%= note.created_at.strftime('%Y-%m-%d %H:%M') %>
                </small>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-notes text-center py-5">
      <p class="text-muted lead mb-4">ノートはまだありません</p>
      <%= link_to new_note_path, class: 'btn btn-danger fw-bold px-4 py-2 rounded-3' do %>
        <i class="bi bi-plus-circle me-2"></i>最初のノートを作成
      <% end %>
    </div>
  <% end %>
</div>

<% content_for :styles do %>
<style>
  .note-card {
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .note-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
  }
</style>
<% end %>

<% content_for :head do %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<% end %>
